<div class="container-xl px-4 mt-4">

  <nav class="navbar navbar-lg navbar-light bg-light">
    <div class=" d-flex align-items-center justify-content-end">
      <a class="nav-item nav-link link-dark active" href="/my-profile">Profile<span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link link-dark" href="/my-address">Addresses</a>
      <a class="nav-item nav-link link-dark" href="/my-orders">My orders</a>

    </div>
  </nav>

  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Date</th>
        <th>Address</th>
        <th>Status</th>
        <th>Total Amount</th>
        <th>Payment Method</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>
          <div class="d-flex align-items-center">
            <div class="ms-1">
              <p class="fw-bold mb-1">{{this.Date}}</p>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal">{{this.deliveryDetails.address}}</p>
        </td>
        <td>
          <span class="badge bg-success rounded-pill d-inline">{{this.status}}</span>
        </td>
        <td>{{this.totalAmount}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>
          <a href="/view-order-products/{{this._id}}" class="btn btn-primary text-decoration-none">View Products</a>
          {{#if this.cancelled}}

          {{else}}
          {{#if this.delivered}}
          {{else}}
          <a href="/cancel-order/{{this._id}}" onclick="return confirm('Do you want to cancel this order')"
            class="btn btn-danger text-decoration-none">Cancel</a>
          {{/if}}
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>
<section class="page-section bg-light" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Popular Category</h2>
        </div>
        <div class="row">
            {{#each category}}
            <div class="col-md-3 mt-5">
                <div class="team-member text-center">
                    <img class="mx-auto rounded-circle" src="/category-image/{{this._id}}.jpg" height="200px;" alt="..." />
                    <h4>{{this.Category}}</h4>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>



